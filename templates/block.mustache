{{#courseid}}
    {{#hasgroup}}
        <h3>{{#str}}myteam, block_evokehq{{/str}}</h3>
        <div class="myteammembers">
            {{#groupmembers}}
                <div class="groupmember">
                    <img src="{{{userpicture}}}" alt="{{{userfullname}}}"> {{{fullname}}}
                </div>
            {{/groupmembers}}
        </div>
    {{/hasgroup}}
{{/courseid}}

<!-- Perhaps this would be a good space to insert a "My superpowers" section to graph progress toward superpowers (badges/competencies) and badges awarded  -->

{{#courseid}}
<div class="actionbuttons">
    <div class="button">
        <div class="icon">
            <img src="{{config.wwwroot}}/blocks/evokehq/pix/portfolios.png" alt="{{#str}}exploreportfolios, block_evokehq{{/str}}">
        </div>
        <div class="action">
            <a href="{{config.wwwroot}}/blocks/evokehq/groups.php?course={{{courseid}}}">{{#str}}exploreportfolios, block_evokehq{{/str}}</a>
        </div>
    </div>
    {{#url_chat}}
        <div class="button">
            <div class="icon">
                <img src="{{config.wwwroot}}/blocks/evokehq/pix/chat.png" alt="{{#str}}groupchat, block_evokehq{{/str}}">
            </div>
            <div class="action">
                <a href="{{{url_chat}}}">{{#str}}groupchat, block_evokehq{{/str}}</a>
            </div>
        </div>
    {{/url_chat}}
    {{#url_evokation}}
        <div class="button">
            <div class="icon">
                <img src="{{config.wwwroot}}/blocks/evokehq/pix/evokation.png" alt="{{#str}}evokation, block_evokehq{{/str}}">
            </div>
            <div class="action">
                <a href="{{{url_evokation}}}">{{#str}}evokation, block_evokehq{{/str}}</a>
            </div>
        </div>
    {{/url_evokation}}
    <div class="button">
        <div class="icon">
            <img src="{{config.wwwroot}}/blocks/evokehq/pix/missions.png" alt="{{#str}}missions, block_evokehq{{/str}}">
        </div>
        <div class="action">
            <a href="{{{config.wwwroot}}}/course/view.php?id={{courseid}}">{{#str}}missions, block_evokehq{{/str}}</a>
        </div>
    </div>
</div>
{{/courseid}}
{{^courseid}}
    <div class="alert alert-warning" role="alert">
        <h4>{{#str}}youarenotenrolled, block_evokehq{{/str}}</h4>
        <p class="mb-0">{{#str}}youarenotenrolled_desc, block_evokehq{{/str}}</p>
    </div>
{{/courseid}}