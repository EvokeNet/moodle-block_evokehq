<h2>{{{name}}}</h2>

<div id="intro" class="box py-3 generalbox boxaligncenter">{{{intro}}}</div>

<div class="gradingsummary mb-2 p-2" style="border: 1px solid #d7dfe3;">
    <div class="row">
        <div class="col-4">
            <p class="mb-0 font-weight-bold">{{#str}}datelimit, mod_evokeportfolio{{/str}}</p>
            <p class="mb-0">{{{datelimit}}}</p>
        </div>
        <div class="col-4">
            <p class="mb-0 font-weight-bold">{{#str}}groupactivity, mod_evokeportfolio{{/str}}</p>
            <p class="mb-0">
                {{#groupactivity}}
                    {{#str}}yes{{/str}}
                {{/groupactivity}}
                {{^groupactivity}}
                    {{#str}}no{{/str}}
                {{/groupactivity}}
            </p>
        </div>
        <div class="col-4">
            <p class="mb-0 font-weight-bold">{{#str}}page_view_timeremaining, mod_evokeportfolio{{/str}}</p>
            <p class="mb-0">
                {{#isdelayed}}
                    <span class="badge badge-danger">{{{timeremaining}}}</span>
                {{/isdelayed}}
                {{^isdelayed}}
                    {{{timeremaining}}}
                {{/isdelayed}}
            </p>
        </div>
    </div>
    {{#groupactivity}}
        <hr class="my-2">
        <div class="row">
            <div class="col-6">
                <p class="mb-0 font-weight-bold">{{#str}}groupgradingmode, mod_evokeportfolio{{/str}}</p>
                <p class="mb-0">{{groupgradingmodetext}}</p>
            </div>
            <div class="col-6">
                <p class="mb-0 font-weight-bold">{{#str}}group{{/str}}</p>
                <p class="mb-0">{{groupname}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="mb-0 font-weight-bold">{{#str}}groupmembers{{/str}}</p>
                {{#groupmembers}}
                    <div class="groupmember">
                        <img src="{{userpicture}}" alt="{{fullname}}"> {{fullname}}
                    </div>
                {{/groupmembers}}
            </div>
        </div>
    {{/groupactivity}}
</div>

{{#sections}}
    <div class="card mb-2" style="border: 1px solid #d7dfe3;">
        <div class="card-body">
            <h5 class="card-title">{{{name}}}</h5>
            {{#description}}
                <p class="mb-0">{{{description}}}</p>
            {{/description}}
        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-primary" href="{{{config.wwwroot}}}/blocks/evokehq/section.php?id={{{cmid}}}&section={{{id}}}&group={{{groupid}}}">{{#str}}view, block_evokehq{{/str}}</a>
        </div>
    </div>
{{/sections}}